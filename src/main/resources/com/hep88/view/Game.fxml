<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<AnchorPane maxHeight="470.0" maxWidth="800.0" minHeight="470.0" minWidth="800.0" prefHeight="470.0" prefWidth="800.0"
            style="-fx-background-color: #FAF2E9;" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hep88.view.GameController">
    <children>
        <ImageView fitHeight="531.0" fitWidth="926.0" layoutX="-53.0">
            <image>
                <Image url="file:src/main/resources/com/hep88/view/GameBackground.png"/>
            </image>
        </ImageView>
        <HBox alignment="CENTER" layoutX="110.0" layoutY="160.0" prefHeight="100.0" prefWidth="600.0" spacing="20.0">
            <children>
                <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="file:src/main/resources/com/hep88/view/Scissors.png"/>
                    </image>
                </ImageView>
                <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="file:src/main/resources/com/hep88/view/Paper.png"/>
                    </image>
                </ImageView>
                <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="file:src/main/resources/com/hep88/view/Stone.png"/>
                    </image>
                </ImageView>
            </children>
        </HBox>
        <HBox layoutX="227.0" layoutY="338.0" prefHeight="20.0" spacing="100.0">
            <children>
                <Button mnemonicParsing="false" onAction="#handleThrowScissors" style="-fx-background-color: black;"
                        text="Scissors" textFill="WHITE">
                    <font>
                        <Font size="13.0"/>
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#handleThrowPaper" style="-fx-background-color: black;"
                        text="Paper" textFill="WHITE">
                    <font>
                        <Font size="13.0"/>
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#handleThrowStone" style="-fx-background-color: black;"
                        text="Stone" textFill="WHITE">
                    <font>
                        <Font size="13.0"/>
                    </font>
                </Button>
            </children>
        </HBox>
    </children>
</AnchorPane>
